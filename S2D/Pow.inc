;
; Процедура возведения числа в степень.
;
; Вход:
; EBX – число
; ECX – степень
;
; Выход:
; EBX – результат возведения числа в заданную степень
;

Pow					proc

					push eax
					push ecx
					push edx					

					mov eax, 1			; Результат = 1

@@PowLoop:								; Цикл возведения чиста в степень путем последовательного умножения
					cmp ecx, 0          ; Если степень = 0,
					je @@EndPowLoop     ; то выходим с результатом 1

					mul ebx             ; Умножаем промежуточный результат на число
										; EAX - первый множитель (результат), EBX - второй множитель (число) 
					dec ecx             ; Уменьшаем степень на 1
					jmp @@PowLoop         ; и продолжаем цикл

@@EndPowLoop:		                    ; Помещаем результат возведения в степень в EBX и выходим
					mov ebx, eax

					pop edx
					pop ecx
					pop eax

					ret

Pow					endp